{
  "name": "mojara",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "turbo run dev --filter=!frontend-mobile",
    "dev:web": "turbo run dev --filter=frontend-mobile -- --web",
    "dev:android": "pnpm --filter frontend-mobile android",
    "dev:mobile": "pnpm --filter frontend-mobile dev:client",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  }
}
